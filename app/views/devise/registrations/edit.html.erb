<div class="card">
  <div class="card-header"><h2>Edit Profile</h2></div>
   <div class="card-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <br />
    <%= f.email_field :email, autofocus: false, class:"form-control", placeholder: "Email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <br />
    <%= f.password_field :password,class:"form-control", placeholder: "New Password ( Leave blank if you don't want to change it! )" , autocomplete: "new-password" %>
    <br />
  </div>

  <div class="field form-group">
    <%= f.password_field :password_confirmation,class:"form-control", placeholder: "Confirm New Password" , autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.password_field :current_password,class:"form-control", placeholder: "Enter Current Password to save changes" , autocomplete: "current-password" %>
  </div>
   <br />
  <div class="actions">
    <%= f.submit "Update", class:"btn btn-dark" %>
  </div>
<% end %>

  </div>
</div>
<br />
<div class="card">
  <div class="card-header">
    <h4>Delete my account</h4>
  </div>
  <div class="card-body">
    <h6 class="card-title">Unhappy? </h6>
    <p class="card-text"><p style="{display: inline;}"><%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger", :style => 'display:inline' %></p></p>
   </div>
   <div class="card">
  <div class="card-body">
   <%= link_to "Back", :back, class: "btn btn-dark", :style => 'display:inline'%>
  </div>
</div>
</div>

